<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eathealthy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EatHealthy">
        <!--Added Splash Screen Activity-->
        <activity android:name=".activity.SplashScreen">

            <!--Added code as this activity is the main and launcher activity-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Removed the launcher activity code from the mainactivity below-->
        <activity android:name=".activity.MainActivity"></activity>
    </application>

</manifest>